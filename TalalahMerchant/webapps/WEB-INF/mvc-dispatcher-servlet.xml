<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/mvc 
        http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.2.xsd">
	<context:annotation-config />
	<context:component-scan base-package="com.emc.app.*" />
	
	<!-- View Resource (HTML, JS, CSS) -->
	
 	<mvc:resources mapping="/js/lib/**" location="/js/lib/"/>
 	<mvc:resources mapping="/js/scripts/**" location="/js/scripts/"/>
 	<mvc:resources mapping="/js/scripts/apps/**" location="/js/scipts/apps/"/>
 	<mvc:resources mapping="/fonts/**" location="/fonts/"/>
 	<mvc:resources mapping="/css/**" location="/css/"/>
 	<mvc:resources mapping="/template/**" location="/template/"/>
 	<mvc:resources mapping="/content/**" location="/content/"/>
 	
	<mvc:annotation-driven />
	
	<bean id="multipartResolver" class="org.springframework.web.multipart.support.StandardServletMultipartResolver"/>
	
</beans>